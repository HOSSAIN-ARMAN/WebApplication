@model JesparWebApplication.Models.SupplierViewModel

<div class="card">
    <div class="grid-header">
        <div class="row">
            <label class="col-md-10"></label>
            @*<button class="col-md-4 btn btn-outline-primary"><a href="@Url.Action("Save", "Supplier")">Add Supplier</a></button>*@
            <a href="@Url.Action("Save", "Supplier")"><button class="btn btn-outline-info" type="submit">Add SUPPLIER<i class="mdi mdi-arrow-up-bold-circle"></i></button></a>
        </div>
        
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>SL</th>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Email</th>
                    <th>Contact</th>
                    <th>Loyalty Point</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 1;}
                @foreach (var supplier in Model.Suppliers)
                {
                    <tr>
                        <td>@(i++)</td>
                        <td>@supplier.Code</td>
                        <td>@supplier.Name</td>
                        <td>@supplier.Address</td>
                        <td>@supplier.Email</td>
                        <td>@supplier.Contact</td>
                        <td>@supplier.LoyaltyPoint</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "supplier", new { Id = supplier.Id}, null)
                            @Html.ActionLink("Delete", "Delete", "supplier", new { Id = supplier.Id}, null)
                            @*<a class='btn btn-outline-info btn-sm' href="#"><span class="glyphicon glyphicon-edit"></span> </a>
                            <a class="btn btn-outline-danger btn-sm" href="#"><span class="glyphicon glyphicon-trash"></span> Del</a>*@
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>
