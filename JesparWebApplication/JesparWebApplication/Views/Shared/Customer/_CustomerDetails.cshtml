@model JesparWebApplication.Models.CustomerViewModel


<section class="Data-view">
    <div class="container">
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">SL</th>
                    <th scope="col">CustomerCode</th>
                    <th scope="col">CustomerName</th>
                    <th scope="col">CustomerAddress</th>
                    <th scope="col">CustomerEmail</th>
                    <th scope="col">Contact</th>
                    <th scope="col">LoyaltyPoint</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 1;}
                @foreach (var customers in Model.Customers)
                {
                    <tr>
                        <td>@(i++)</td>
                        <td>@customers.CustomerCode</td>
                        <td>@customers.CustomerName</td>
                        <td>@customers.CustomerAddress</td>
                        <td>@customers.CustomerEmail</td>
                        <td>@customers.Contact</td>
                        <td>@customers.LoyaltyPoint</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = customers.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = customers.Id })
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>
</section>
