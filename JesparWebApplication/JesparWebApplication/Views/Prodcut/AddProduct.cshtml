@model JesparWebApplication.Models.ProductViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">
        <div class="card">
            <div class="card-header">

            </div>
            <div class="card-body">
                <form method="post">

                    <div class="form-group row">
                        @*<label for="colFormLabel" class="col-sm-2 col-form-label">Code</label>*@

                        <label for="colFormLabel" class="col-sm-2 col-form-label">@Html.LabelFor(c => c.Code)</label>
                        <div class="col-sm-10">
                            @*<td class="form-control"> @Html.TextBox("Code")</td>*@
                            @*<input type="text" name="Code" class="form-control">*@

                            @Html.TextBoxFor(c => c.Code)
                            @Html.ValidationMessageFor(c => c.Code)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-2 col-form-label">@Html.LabelFor(c => c.Name)</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(c => c.Name)
                            @Html.ValidationMessageFor(c => c.Name)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-2 col-form-label">@Html.LabelFor(c => c.ReorderLavel)</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(c => c.ReorderLavel)
                            @*@Html.ValidationMessageFor(c => c.ReorderLavel)*@
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-2 col-form-label">@Html.LabelFor(c => c.Description)</label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(c => c.Description)
                            @Html.ValidationMessageFor(c => c.Description)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-2 col-form-label">@Html.LabelFor(c => c.CategoryId)</label>
                        <div class="col-sm-10">
                           @Html.DropDownListFor(c=>c.CategoryId, Model.CategorySelectListItems,"--Select--")
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-3">

                            <input type="submit" value="Save" class="form-control btn btn-sm btn-primary">
                        </div>
                    </div>

                    @if (ViewBag.message != null)
                    {
                        <h4 class="text-center text-primary">  @ViewBag.message</h4>
                    }
                </form>
            </div>
        </div>
    </div>