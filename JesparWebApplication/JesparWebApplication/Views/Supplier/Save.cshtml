    <style>
        .btn{
            border:double;
        }
    </style>

}

@section Search{
   @* <button class="col-md-4 btn btn-light"><a href="@Url.Action("Search", "Supplier")">Display Supplier</a></button>*@

    <div class="input-group">
        
        <a href="@Url.Action("Search", "Supplier")"><button class="btn btn-outline-info" type="submit">DISPLAY SUPPLIER<i class="mdi mdi-arrow-top-right-bold-outline"></i></button></a>
    </div>
}

<div class="container">
    <div class="row">


        <div class="col-md-10">
            <div class="card">
                <div class="grid-header mb-0">

                    <div class="row">
                        <label class="col-md-8"><b>SUPPLIER INFO</b></label>


                    </div>
                </div>
                <div class="grid-body">
                    <blockquote class="blockquote mb-0">
                        <form method="post">

                            <div class="form-group row">
                                @*<label for="colFormLabel" class="col-sm-2 col-form-label">Code</label>*@

                                <label for="colFormLabel" class="col-sm-2 col-form-label">@Html.LabelFor(c => c.Code)</label>
                                <div class="col-sm-10">
                                    @*<td class="form-control"> @Html.TextBox("Code")</td>*@
                                    @*<input type="text" name="Code" class="form-control">*@

                                    @Html.TextBoxFor(c => c.Code, new { @class = "form-control" })

                                    @Html.ValidationMessageFor(c => c.Code)



                                    @if (ViewBag.CodeExits != null)
                                    {

                                        <p>@ViewBag.CodeExits</p>
                                    }
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="colFormLabel" class="col-sm-2 col-form-label">@Html.LabelFor(c => c.Name)</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(c => c.Name)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="colFormLabel" class="col-sm-2 col-form-label">@Html.LabelFor(c => c.Address)</label>
                                <div class="col-sm-10">
                                    @Html.TextAreaFor(c => c.Address, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(c => c.Address)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="colFormLabel" class="col-sm-2 col-form-label">@Html.LabelFor(c => c.Email)</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(c => c.Email, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(c => c.Email)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="colFormLabel" class="col-sm-2 col-form-label">@Html.LabelFor(c => c.Contact)</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(c => c.Contact, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(c => c.Contact)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="colFormLabel" class="col-sm-2 col-form-label">@Html.LabelFor(c => c.LoyaltyPoint)</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(c => c.LoyaltyPoint, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(c => c.LoyaltyPoint)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="colFormLabel" class="col-sm-8 col-form-label"></label>
                                <div class="col-sm-4">

                                    <input type="submit" name="btnSave" value="Save" class="form-control btn btn-sm btn-primary">
                                </div>
                            </div>

                        </form>
                        <br />
                        <br />
                        <br />
                        <br />
                        <footer class="blockquote-footer">

                            Enter Supplier Info <cite title="Source Title">Get Message here....</cite>
                            @if (ViewBag.message != null)
                            {
                                <h4 class="text-center text-primary">  @ViewBag.message</h4>
                            }
                        </footer>
                    </blockquote>
                </div>



            </div>
        </div>
        <div class="Col-md-2">

        </div>
    </div>
    <hr />


